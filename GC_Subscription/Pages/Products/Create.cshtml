@page
@model GC_Subscription.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Opret ny</h1>

<h4>Ret</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name field -->
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <!-- Description field -->
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <!-- Price field -->
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <!-- Allergy field -->
            <div class="form-group">
                <label asp-for="Product.Allergies" class="control-label"></label>
                <select asp-for="SelectedAllergyIds" class="form-control" multiple>
                    @foreach (var allergy in ViewData["Allergies"] as SelectList)
                    {
                        <option value="@allergy.Value">@allergy.Text</option>
                    }
                </select>
                <span asp-validation-for="Product.Allergies" class="text-danger"></span>
            </div>

            <!-- Diet field -->
            <div class="form-group">
                <label asp-for="Product.Diets" class="control-label"></label>
                <select asp-for="SelectedDietIds" class="form-control" multiple>
                    @foreach (var diet in ViewData["Diets"] as SelectList)
                    {
                        <option value="@diet.Value">@diet.Text</option>
                    }
                </select>
                <span asp-validation-for="Product.Diets" class="text-danger"></span>
            </div>

            <!-- In Stock field -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Product.InStock" /> @Html.DisplayNameFor(model => model.Product.InStock)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
