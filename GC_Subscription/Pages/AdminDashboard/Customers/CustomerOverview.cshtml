@page
@model GC_Subscription.Pages.AdminDashboard.Customers.CustomerOverviewModel

@{
    ViewData["Title"] = "CustomerOverview";
}

<h1>Overview</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Address1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Zip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Comments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.SignupCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.SignupCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.StripeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.StripeId)
        </dd>
    </dl>
</div>
<hr />
<h3>Invoices</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].InvId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].CusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].SubId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoice)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CusId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubId)
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<h3>Subscriptions</h3>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].Interval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].StripeId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subscription)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Interval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StripeId)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
