@page
@model GC_Subscription.Pages.Mealboxes.IndexModel

@{
    ViewData["Title"] = "Måltidskasser";
}

<h1>Måltidskasser</h1>

<p>
    <a asp-page="Create">Opret ny</a>
</p>


<!-- Table Header -->
<table class="table">
    <thead>
        <tr>
            <th>
                Billed
            </th>
            <th>
                Navn
            </th>
            <th>
                Tema
            </th>
            <th>
                Beskrivelse
            </th>
            <th>
                Retter
            </th>

            <th>
                Kostvaner
            </th>
            <th>
                Allergier
            </th>

            <th>
                Pris
            </th>
            <th></th>
        </tr>
    </thead>


    <!-- Table Rows -->
    <tbody>
        @foreach (var item in Model.Mealbox)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" alt="Billede af måltidskassen" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @foreach (var product in item.Products)
                    {
                        @product.Name <br />
                    }
                </td>

                <!-- Diets -->
                <td>
                    @foreach (var diet in item.Products.SelectMany(p => p.Diets)
                   .Select(a => a.Name)
                   .Distinct()
                   .OrderBy(a => a, StringComparer.Create(new System.Globalization.CultureInfo("da-DK"), false)))
                    {
                        @diet <br />
                    }
                </td>


                <!-- Allergies -->
                <td>
                    @foreach (var allergy in item.Products.SelectMany(p => p.Allergies)
                   .Select(a => a.Name)
                   .Distinct()
                   .OrderBy(a => a, StringComparer.Create(new System.Globalization.CultureInfo("da-DK"), false)))
                    {
                        @allergy <br />
                    }
                </td>

                <td>
                    kr. @Html.DisplayFor(modelItem => item.Price),-
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Rediger</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detaljer</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Slet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
