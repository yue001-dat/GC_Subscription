@page
@model GC_Subscription.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!-- Content Container -->
<div class="container">

    <div class="row">

        <!-- Admin Menu -->
        <div class="col-2">


            <div class="admin-panel-inner-container">
                <small><strong>Admin Panel</strong></small>
                <ul class="nav flex-column admin-panel">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Opret måltidskasse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Opret færdigret</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Rediger måltidskasse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Rediger færdigret</a>
                    </li>
                </ul>
            </div>



        </div>
        <!-- Admin Menu -->

        <div class="col-1"></div>


        <div class="col-9">

            <div class="row">
                <h1 class="display-6">
                    Opret færdigret
                </h1>
                <hr>
            </div>


            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Navn</label>
                </div>
                <div class="col-6">
                    <input type="text" class="form-control">
                </div>
            </div>

            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Beskrivelse</label>
                </div>
                <div class="col-6">
                    <textarea class="form-control" name="" id="" cols="30" rows="10"></textarea>
                </div>
            </div>

            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Ingredienser</label>
                </div>
                <div class="col-6">
                    <input type="text" class="form-control">
                </div>
            </div>

            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Season/Tema</label>
                </div>
                <div class="col-6">
                    <select name="" id="" class="form-control">
                        <option value="">test</option>
                    </select>
                </div>
            </div>


            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Pris</label>
                </div>
                <div class="col-6">
                    <div class="input-group">
                        <span class="input-group-text">DKK</span>
                        <input type="text" class="form-control">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
            </div>

            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Billede</label>
                </div>
                <div class="col-6">
                    <input type="file" multiple>
                </div>
            </div>

            <div class="row align-items-center mb-2">
                <div class="col-2">
                    <label class="col-form-label">Tilføj til måltidskasse</label>
                </div>
                <div class="col-6">
                    <select name="" id="" class="form-control">
                        <option value=""></option>
                    </select>
                </div>
            </div>

            <div class="clearfix"><br></div>

            <div class="row">
                <div class="col-8">
                    <button class="btn btn-lg btn-success w-100">Opret færdigret</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content Container -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
