@page
@model GC_Subscription.Pages.Products.EditModel

@{
    ViewData["Title"] = "Rediger";
}



<!-- Style -->
<style>
    .display-6 {
        font-size: 1.65rem !important;
    }

    img.product-image {
        border-radius: 20px;
    }

    .admin-panel-inner-container {
        border-radius: 8px;
        border: 1px solid darkgrey !important;
        padding: 16px 0px 16px 10px;
        text-align: center !important;
        margin-top: 50% !important;
    }

    .admin-panel {
        text-align: left !important;
    }


        .admin-panel a.nav-link {
            color: #000 !important;
        }

            .admin-panel a.nav-link.active {
                font-weight: bold;
            }

            .admin-panel a.nav-link:hover {
                text-decoration: underline;
            }
</style>

<!-- Content Container -->
<div class="container">

    <div class="row">

        <!-- Start Admin Menu -->
        <div class="col-2">
            <div class="admin-panel-inner-container">
                <small><strong>Admin Panel</strong></small>
                <ul class="nav flex-column admin-panel">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="../Mealboxes/Create">Opret måltidskasse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="../Products/Create">Opret færdigret</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../Mealboxes">Rediger måltidskasse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Rediger færdigret</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- End Admin Menu -->


        <!-- Start mealbox Creation -->
        <div class="col-1"></div>


        <div class="col-9">

            <!-- Heading -->
            <div class="row">
                <h1 class="display-6">Rediger færdigret</h1>
                <hr>
            </div>

            <!-- Start Form -->
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <!-- Hidden Id -->
                <input type="hidden" asp-for="Product.Id" />

                <!-- Name field -->
                <div class="form-group row align-items-center mb-2">
                    <div class="col-2">
                        <label class="col-form-label">Navn</label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Product.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <!-- Description field -->
                <div class="form-group row align-items-center mb-2">
                    <div class="col-2">
                        <label class="col-form-label">Beskrivelse</label>
                    </div>
                    <div class="col-6">
                        <textarea asp-for="Product.Description" class="form-control" cols="30" rows="10"></textarea>
                    </div>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>


                <!-- Price field -->
                <div class="form-group row align-items-center mb-2">
                    <div class="col-2">
                        <label class="col-form-label">Pris</label>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <span class="input-group-text">DKK</span>
                            <input asp-for="Product.Price" class="form-control" step=1 />
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>


                <!-- Diet field -->
                <div class="form-group row align-items-center mb-2">
                    <div class="col-2">
                        <label class="col-form-label">Kostvaner</label>
                    </div>
                    <div class="col-6">
                        @foreach (var diet in Model.AvailableDiets)
                        {
                            var isChecked = Model.Product.Diets.Any(d => d.Id == diet.Id);
                            <input type="checkbox" class="btn-check visually-hidden" id="diet-@diet.Id" name="SelectedDietIds" value="@diet.Id" autocomplete="off" @(isChecked ? "checked" : "")>
                            <label class="btn btn-outline-primary" for="diet-@diet.Id">@diet.Name</label>
                        }
                    </div>
                </div>


                <!-- Allergy field -->
                <div class="form-group row align-items-center mb-2">
                    <div class="col-2">
                        <label class="col-form-label">Allergier</label>
                    </div>
                    <div class="col-6">
                        @foreach (var allergy in Model.AvailableAllergies)
                        {
                            var isChecked = Model.Product.Allergies.Any(a => a.Id == allergy.Id);
                            <input type="checkbox" class="btn-check visually-hidden" id="allergy-@allergy.Id" name="SelectedAllergyIds" value="@allergy.Id" autocomplete="off" @(isChecked ? "checked" : "")>
                            <label class="btn btn-outline-primary" for="allergy-@allergy.Id">@allergy.Name</label>
                        }
                    </div>
                </div>


                <!-- Image field -->
                <div class="form-group row align-items-center mb-2">
                    <div class="col-2">
                        <label class="col-form-label">Billede</label>
                    </div>
                    <div class="col-6">
                        
                        <!-- Show current image -->
                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" alt="Nuværende billed" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                        }
                        else
                        {
                            <p>Intet billede tilgængeligt</p>
                        }

                        <!-- Upload nyt billede -->
                        <input type="file" asp-for="Image" class="form-control" />
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                
                <!-- Selected Allergies -->
                <input type="hidden" asp-for="SelectedAllergyIds" />

                <!-- Selected Diets -->
                <input type="hidden" asp-for="SelectedDietIds" />
                

                <!-- Submit button -->
                <div class="row">
                    <div class="form-group col-8">
                        <input type="submit" value="Rediger færdigret" class="btn btn-lg btn-success w-100" />
                    </div>
                </div>
            </form>
            <!-- End Form -->

        </div>
        <!-- End Product Creation -->

    </div>
</div>


<!-- End Content Container -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}